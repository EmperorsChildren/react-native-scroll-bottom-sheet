{
  "name": "@emperorschildren/react-native-scroll-bottom-sheet",
  "version": "4.20.69",
  "description": "Cross platform scrollable bottom sheet with virtualization support, running at 60 FPS and fully implemented in JS land",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "release": "release-it --no-increment",
    "example": "yarn --cwd example"
  },
  "keywords": [
    "react-native",
    "react",
    "ios",
    "android",
    "bottom-sheet",
    "bottomsheet",
    "cross-platform",
    "60FPS"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EmperorsChildren/react-native-scroll-bottom-sheet.git"
  },
  "author": "MasterSigmar (https://github.com/MasterSigmar)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EmperorsChildren/react-native-scroll-bottom-sheet/issues"
  },
  "homepage": "https://github.com/EmperorsChildren/react-native-scroll-bottom-sheet#readme",
  "peerDependencies": {
    "react": "*",
    "react-native": "<0.75.0",
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-reanimated": ">=2.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.5.0",
    "@react-native-community/bob": "^0.17.1",
    "@react-native-community/eslint-config": "^3.2.0",
    "@release-it/conventional-changelog": "^8.0.2",
    "@types/babel__core": "^7",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.6",
    "@types/react-native": "^0.73.0",
    "commitlint": "^19.5.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "^2",
    "release-it": "^17.6.0",
    "typescript": "~5.1.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "plugins": [
      "header"
    ],
    "rules": {
      "header/header": [
        2,
        "block",
        [
          "*",
          " * Copyright (c) 2024 MasterSigmar",
          " *",
          " * This source code is licensed under the MIT license found in the",
          " * LICENSE file in the root directory of this source tree.",
          " *",
          " "
        ]
      ],
      "@typescript-eslint/no-unused-vars": "off",
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "avoid",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release %s",
      "tagName": "v%s"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.25.2",
    "metro-react-native-babel-preset": "^0.77.0",
    "utility-types": "^3.10.0"
  },
  "packageManager": "yarn@4.4.1"
}
